			<% time_ary[role] = (@data_hash["#{role}_플레이 시간"].to_i/60).to_s + "H" %>
		<% else %>
			<% time_ary[role] = @data_hash["#{role}_플레이 시간"].to_i.to_s + "m" %>
		<% end %>
	<% end %>
	var play_time = ['<%= time_ary["offense"] %>','<%= time_ary["support"] %>',
